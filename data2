<script type="text/javascript">
var MOBILE_EVENT_DOMAIN = document.location.protocol + "//event.melon.com";
var MOBILE_MAIN_DOMAIN = document.location.protocol + "//m2.melon.com";
var MOBILE_SEARCH_DOMAIN = document.location.protocol + "//search.melon.com";

$(window).load(function() {
	try {
		var bannerApiUrl = 'https://banner.melon.com/api/public/v1/banner/BN000015'+ '?cpId=' + POC_ID + (isMelonLogin() ? ('&memberKey=' + getMemberKey()) : '');
		$.ajax({
			url: bannerApiUrl,
			type: "GET",
			dataType:'json',
			timeout: 5000,
			xhrFields: {
				withCredentials: true
			},
			success: function(data) {
				if (data != null && data.response != null &&  data.response.banners.length > 0) {
					var banner = data.response.banners[0];
					$('.sidebar_banner_link').css('background-image', 'url(' + banner.imgUrl + ')');
					$('.sidebar_banner_link').css('background-color', '#' + banner.bgColor);
					$('.sidebar_banner_link').attr('href', banner.linkUrl);
					$('.sidebar_banner_link').attr('title', banner.imgAltText);
					$('.sidebar_banner_link').attr('data-bannerSeq', banner.bannerSeq);
					if(banner.linkTarget == 'N'){
						$('.sidebar_banner_link').attr('target', '_blank');
					}
					$('.sidebar_banner').show();

					// tiara viewImp log
					if(typeof(mcomMainTiara) != 'undefined'){
						var viewImpLog = mainTiaraObj.menu.bannerViewImp;
						viewImpLog.viewImpContents.id = $(".sidebar_banner_link").attr("data-bannerSeq");
						mcomMainTiara.sendNewTiaraViewableImpressionLog(viewImpLog);
						$(".sidebar_banner_link").click(function(){
							var clickLog = mainTiaraObj.menu.bannerClick;
							clickLog.eventMeta.id = $(".sidebar_banner_link").attr("data-bannerSeq");
							mcomMainTiara.sendNewTiaraLog(clickLog);
						});
					}
				}
			}
		});
	} catch(e){}
});

function goMainMenu(menuNum) {

	var searchString = window.location.href;
	if(searchString.indexOf("/mobile4web/main_list.htm") != -1 || searchString.indexOf("melon.com/index.htm") != -1){
		$('body').removeClass('is_side_menu_open');
		setCookieMain('mainSlider', menuNum );
		slider[0].go_page(menuNum);
	}else{
		switch (menuNum) {
		  case 0    : setCookieMain('mainSlider', 0 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#0";
		        break;
		  case 1    : setCookieMain('mainSlider', 1 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#1";
		        break;
		  case 2    : setCookieMain('mainSlider', 2 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#2";
		        break;
		  case 3    : setCookieMain('mainSlider', 3 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#3";
	        	break;
		  case 4    : setCookieMain('mainSlider', 4 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#4";
          		break;
		  case 5    : setCookieMain('mainSlider', 5 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#5";
          		break;
		  default   : setCookieMain('mainSlider', 6 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#6";
		        break;
		}
	}
}

function goFamilyApp(familyAppName) {

	var searchString = window.location.href;
	if(searchString.indexOf("/mobile4web/main_list.htm") != -1 || searchString.indexOf("melon.com/index.htm") != -1){
		$('body').removeClass('is_side_menu_open');
		//setCookieMain('mainSlider', menuNum );
		//slider[0].go_page(menuNum);
	}

	var scheme 	= "";
	var linkUrl	= "";

	switch (familyAppName) {
	  case "ticket"	:
		  	scheme		= "melonticket://action";
	    	linkUrl		= "http://m.ticket.melon.com";
	        break;
	  case "shopping" :
			scheme 		= "melonshopping://action";
			linkUrl		= "http://m.store.melon.com/index.htm";
	        break;
	  case "aztalk"	:
		  	scheme		= "aztalkapp://openMain?memberKey=&osInfo=&originAppInfo=";
		  	linkUrl		= "http://aztalk.melon.com";
	        break;
	  case "songroom" :
		  	scheme		=  (typeof POC_ID != "undefined" && POC_ID == "IS20") ? "melonShowwing://exec?" : "showwing://root/" ;
			linkUrl		= "//m2.melon.com/serviceintro/showwing_guide.htm";
        	break;
	 default :
	        break;
	}

	appLaunch( scheme, linkUrl, false, true );
}

function goEventMenu(menuNum) {
	var evtPocId = "";
	if (typeof POC_ID != "undefined" && POC_ID != null)
		evtPocId = POC_ID;

	var searchString = window.location.href;
	if (searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/") != -1) {
		$('body').removeClass('is_side_menu_open');
		setCookieMain('eventSlider', menuNum );
// 		slider[0].go_page(menuNum);
		switch (menuNum) {
		  case 0    : setCookieMain('eventSlider', menuNum );
		  			  window.location.href = MOBILE_EVENT_DOMAIN+"/event/list.htm?cpId=" + evtPocId;
		        break;
		  case 1    : setCookieMain('eventSlider', menuNum );
			  		  window.location.href = MOBILE_EVENT_DOMAIN+"/event/my/list.htm?memberKey=" + getMemberKey() + "&cpId=" + evtPocId;
		        break;
		}
	} else {
		switch (menuNum) {
		  case 0    : setCookieMain('eventSlider', menuNum );
		  			  window.location.href = MOBILE_EVENT_DOMAIN+"/event/list.htm?cpId=" + evtPocId;
		        break;
		  case 1    : setCookieMain('eventSlider', menuNum );
			  		  window.location.href = MOBILE_EVENT_DOMAIN+"/event/my/list.htm?memberKey=" + getMemberKey() + "&cpId=" + evtPocId;
		        break;
		}
	}
}

function goMusicstoryMenu(menuNum) {
    var searchString = window.location.href;
    setCookieMain('mstoryMainSlider', menuNum );
    if(searchString.indexOf("/musicstory") != -1){
        $('body').removeClass('is_side_menu_open');
        slider[0].go_page(menuNum);
    }else{
        window.location.href = MOBILE_MAIN_DOMAIN + "/musicstory/index.htm";
    }
}

function goMusicAwardMenu() {
	window.location.href = MOBILE_MAIN_DOMAIN + "/melonaward/weekAward.htm";
}

function goNoticeMenu() {
	window.location.href = MOBILE_MAIN_DOMAIN + "/support/listNotice.htm";
}

//================ 히스토리백 구현관련 추가 ================
//쿠키 생성
function setCookieMain(cName, cValue){
	var ExpDate = new Date();
	ExpDate.setTime(ExpDate.getTime() + 1000*60*30);
    cookies = cName + '=' + escape(cValue) + '; path=/ '; // 한글 깨짐을 막기위해 escape(cValue)를 합니다.
	cookies += ';expires=' + ExpDate.toGMTString() + ';';
    document.cookie = cookies;
}

//쿠키 가져오기
function getCookieMain(cName) {
    cName = cName + '=';
    var cookieData = document.cookie;
    var start = cookieData.indexOf(cName);
    var cValue = '';
    if(start != -1){
    	start += cName.length;
    	var end = cookieData.indexOf(';', start);
    	if(end == -1)end = cookieData.length;
    	cValue = cookieData.substring(start, end);
    }else{
		return 0;
	}
	return unescape(cValue);
}

//쿠키 삭제하기
function delCookieMain(cName){
	var ExpDate = new Date();
	ExpDate.setTime(ExpDate.getTime());
    cookies = cName + '=; path=/ '; // 한글 깨짐을 막기위해 escape(cValue)를 합니다.
	cookies += ';expires=' + ExpDate.toGMTString() + ';';
	document.cookie = cookies;
}

//로그인 공통
function loginSubmit(){
	var searchString = window.location.href;
	if(!isMelonLogin()) {
		if(searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/list.htm") != -1){
			// 앱버전 검증
			try {
				if( appVerCompare(4,0,0) ){
				   	if(POC_ID == "AS40"){
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else if(POC_ID == "IS40") {
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else {
				   		location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				   	}
				}else{
					var curUrl = encodeURIComponent(document.location.href);
					location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				}
			} catch(e) {
				var currappVer = navigator.userAgent.toLowerCase();
				if(currappVer.indexOf(";") > -1 ){
					var tempNa = currappVer.split(";");
					if ( tempNa.length > 0 ) {
						currappVer = tempNa[tempNa.length -2];
						if (currappVer.indexOf("4.") > -1 ) {
							if(POC_ID == "AS40"){
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else if(POC_ID == "IS40") {
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else {
						   		location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						   	}
						}else{
							var curUrl = encodeURIComponent(document.location.href);
							location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						}
					}
				}
			}

		}else{
			if (POC_ID == "AS40"){
				window.melonapp.requestCommand('LoginNeed', '', '', '');
			}
			else if (POC_ID == "IS40")
			{
				location.href = "meloniphone://M4001";
			}else{
				var curUrl = encodeURIComponent(document.location.href);
				location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
			}
		}
		return;
	}
}

function goMyProfile(){
	var searchString = window.location.href;
	if(!isMelonLogin()) {
		if(searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/list.htm") != -1){

			// 앱버전 검증
			try {
				if( appVerCompare(4,0,0) ){
				   	if(POC_ID == "AS40"){
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else if(POC_ID == "IS40") {
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else {
				   		location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				   	}
				}else{
					var curUrl = encodeURIComponent(document.location.href);
					location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				}
			} catch(e) {
				var currappVer = navigator.userAgent.toLowerCase();
				if(currappVer.indexOf(";") > -1 ){
					var tempNa = currappVer.split(";");
					if ( tempNa.length > 0 ) {
						currappVer = tempNa[tempNa.length -2];
						if (currappVer.indexOf("4.") > -1 ) {
							if(POC_ID == "AS40"){
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else if(POC_ID == "IS40") {
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else {
						   		location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						   	}
						}else{
							var curUrl = encodeURIComponent(document.location.href);
							location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						}
					}
				}
			}

		}else{
			if (POC_ID == "AS40"){
				window.melonapp.requestCommand('LoginNeed', '', '', '');
			}
			else if (POC_ID == "IS40")
			{
				location.href = "meloniphone://M4001";
			}else{
				var curUrl = encodeURIComponent(document.location.href);
				location.href = "https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
			}
		}
		return;
	}else{
		//location.href="http://m.app.melon.com/commerce/mypage/myinfo/mobile2/myinfo_informMyInfoView.htm";
		location.href = "https://member.melon.com/muid/mobile/help/myinfo_main.htm?viewType=MYPAGE";
	}
}

